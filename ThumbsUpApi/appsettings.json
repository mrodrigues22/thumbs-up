{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=thumbsup;Username=thumbsup_user;Password=thumbsup_pass"
  },
  "Jwt": {
    "Key": "ThisIsASecretKeyForJWTTokenGeneration123456789",
    "Issuer": "ThumbsUpApi",
    "Audience": "ThumbsUpClient",
    "ExpirationHours": 24
  },
  "FileStorage": {
    "Provider": "Local",
    "LocalPath": "wwwroot/uploads",
    "MaxFileSizeMB": 100
  },
  "Email": {
    "Provider": "Mock"
  },
  "Submission": {
    "LinkExpirationDays": 7,
    "MaxFileSize": 104857600
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:5173", "http://localhost:5174"]
  },
  "Paddle": {
    "ApiKey": "your_paddle_api_key_here",
    "WebhookSecret": "your_webhook_secret_here",
    "Environment": "sandbox",
    "DefaultSuccessUrl": "http://localhost:5173/subscription-success",
    "PriceIds": {
      "Starter": "pri_starter_price_id",
      "Pro": "pri_pro_price_id",
      "Enterprise": "pri_enterprise_price_id"
    }
  },
  "Frontend": {
    "BaseUrl": "http://localhost:5173"
  }
}
