FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["ApprooveItApi.csproj", "./"]
RUN dotnet restore "ApprooveItApi.csproj"
COPY . .
RUN dotnet build "ApprooveItApi.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ApprooveItApi.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ApprooveItApi.dll"]
